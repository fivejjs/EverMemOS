    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python 调试程序: run",
            "type": "debugpy",
            "request": "launch",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}/src",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "run.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python 调试程序: task",
            "type": "debugpy",
            "request": "launch",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/.venv/bin/arq",
            "args": ["task.WorkerSettings"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python 调试程序: longjob",
            "type": "debugpy",
            "request": "launch",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}/src",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "run.py",
            "args": ["--longjob", "kafka_consumer"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python 调试程序: run_this_file",
            "type": "debugpy",
            "request": "launch",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}/src",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "${workspaceFolder}/src/bootstrap.py",
            "args": ["${file}"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}